<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filefx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <StackedBarChart fx:id="wordGraph">
     <xAxis>
       <CategoryAxis fx:id="wordNumber" label="Words" side="BOTTOM" />
     </xAxis>
     <yAxis>
       <NumberAxis fx:id="wordFrequency" label="Frequency" side="LEFT" />
     </yAxis>
   </StackedBarChart>

    <Label fx:id="textLabel" />
    <Button onAction="#openFileReader" text="Choose file" />
</VBox>
